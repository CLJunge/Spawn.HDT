<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="400"
        MinHeight="350" MinWidth="400">
    <Grid>
        <Button Content="GO!" HorizontalAlignment="Left" Margin="10,10,0,0" Width="100" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBox Name="inputBox" HorizontalAlignment="Stretch" Margin="115,10,10,0" VerticalAlignment="Top" Height="20" PreviewTextInput="ValidateInput" />
        <DataGrid Name="dataGrid" AutoGenerateColumns="True" HorizontalAlignment="Stretch" Margin="10,35,10,32" VerticalAlignment="Stretch" />
        <Label Name="lblCards" Content="Cards: 10" HorizontalContentAlignment="Right" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,80,4" Width="75"/>
        <Label Name="lblDust" Content="Dust: 500" HorizontalContentAlignment="Left" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="80,0,0,4" Width="75"/>
    </Grid>
</Window>
