<UserControl x:Class="Spawn.HDT.DustUtility.UI.Controls.Toasts.NotificationToast"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:uicontrols="clr-namespace:Spawn.HDT.DustUtility.UI.Controls"
             mc:Ignorable="d" Background="{DynamicResource AccentColorBrush}"
             MouseEnter="OnMouseEnter" MouseLeave="OnMouseLeave"
             MouseLeftButtonUp="OnMouseLeftButtonUp"
             MinHeight="40" MinWidth="250">
    <Grid VerticalAlignment="Center" Margin="10,0">
        <Image Source="/Spawn.HDT.DustUtility;component/Resources/icon.png" Height="28" Width="28"
                   HorizontalAlignment="Left" RenderOptions.BitmapScalingMode="Fant"/>
        <StackPanel VerticalAlignment="Center" Margin="5,0">
            <TextBlock Name="MessageTextBox" Foreground="White" TextAlignment="Center" FontWeight="SemiBold" FontSize="15"
                           LineHeight="15" LineStackingStrategy="BlockLineHeight" Text="Collection saved!"/>
        </StackPanel>
        <uicontrols:StatusIndicator Success="True" SuccessColor="Lime" FontSize="16"
                                      VerticalAlignment="Center" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>
