<UserControl x:Class="Spawn.HDT.DustUtility.UI.Flyouts.DecksFlyoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:Spawn.HDT.DustUtility.ViewModel"
             vm:ViewModelLocator.ViewModelName="DecksFlyoutViewModel"
             xmlns:controls="clr-namespace:Spawn.HDT.DustUtility.UI.Controls"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">
    <ListView>
        <ListView.ContextMenu>
            <ContextMenu>
                <ContextMenu.Items>
                    <MenuItem Header="Show deck list" Command="{Binding ShowDeckListCommand}"/>
                    <Separator/>
                    <MenuItem Name="toggleDeckMenuItem" Header="Exclude (Search)" Command="{Binding ToggleDeckCommand}"/>
                </ContextMenu.Items>
            </ContextMenu>
        </ListView.ContextMenu>
        <ListView.ItemTemplate>
            <DataTemplate>
                <controls:DeckItemView/>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</UserControl>
