<UserControl x:Class="Spawn.HDT.DustUtility.UI.Flyouts.HistoryFlyoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Spawn.HDT.DustUtility.UI.Controls"
             xmlns:vm="clr-namespace:Spawn.HDT.DustUtility.UI.ViewModels"
             vm:ViewModelLocator.ViewModelName="HistoryFlyoutViewModel"
             mc:Ignorable="d" d:DesignHeight="800" d:DesignWidth="700">
    <Grid>
        <controls:CardsContainer ItemsSource="{Binding CardItems}" ContextMenuEnabled="True" Margin="0,0,0,40" RemoveCardItem="OnRemoveCardItem" AllowDrag="False" AllowDrop="False"/>
        <Button Style="{StaticResource AccentedSquareButtonStyle}" Content="Clear" Command="{Binding ClearHistoryCommand}" VerticalAlignment="Bottom" Margin="5"/>
    </Grid>
</UserControl>
