                        </Border>
                        <TextBlock Text="{Binding Name}" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding CardCount}" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
