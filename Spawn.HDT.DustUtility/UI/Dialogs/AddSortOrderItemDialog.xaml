<Window x:Class="Spawn.HDT.DustUtility.UI.Dialogs.AddSortOrderItemDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spawn.HDT.DustUtility.UI.Dialogs"
        mc:Ignorable="d" Title="Add item" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Select item" Height="25" Margin="0,7,0,0"/>

        <ComboBox Name="cbItems" Grid.Row="1" VerticalAlignment="Center" Width="200" Margin="5,0,5,0"/>

        <WrapPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0,10,5,5">
            <Button Content="_Ok" IsDefault="True" Click="OnOkClick" Width="75" Margin="0,0,10,0"/>
            <Button Content="_Cancel" IsCancel="True" Click="OnCancelClick" Width="75"/>
        </WrapPanel>
    </Grid>
</Window>
